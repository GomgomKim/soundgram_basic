<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="test.dahun.mobileplay.main.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/comm_popup_top">

        <Button
            android:id="@+id/close_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/comm_popup_x"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#bdbdbd">
        <EditText
            android:id="@+id/write_nick"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#000"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:hint="닉네임을 만들어주세요"
            android:textColorHint="#bdbdbd"
            android:background="@drawable/comm_popup_textbox"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="40dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/comm_bubble">
<!---->
            <EditText
                android:id="@+id/write_text"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scrollbars="vertical"
                android:textColor="#000" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right|bottom"
                >
                <Button
                    android:id="@+id/write_cancel_btn"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:background="@drawable/btn_commcancel"
                    android:layout_margin="5dp"
                    android:textColor="#000"/>

                <Button
                    android:id="@+id/write_btn"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:background="@drawable/btn_commok"
                    android:layout_margin="5dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
