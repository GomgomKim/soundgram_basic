<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="test.dahun.mobileplay.main.MainActivity">
    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/cover_top"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/main_3_info"
                        android:scaleType="fitXY"/>

                    <TextView
                        android:id="@+id/cover_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        />
                </LinearLayout>
            </LinearLayout>

            <test.dahun.mobileplay.ui.VerticalViewPager
                android:id="@+id/coverpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </test.dahun.mobileplay.ui.VerticalViewPager>

            <!--이퀄라이저 버튼-->
            <ImageView
                android:id="@+id/ic_equalizerBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp" />

        </FrameLayout>
        <ImageView
            android:id="@+id/maingBottomImage"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_main_bottom"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>

