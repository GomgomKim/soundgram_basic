<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test.dahun.mobileplay.main.MainActivity"
    android:background="@drawable/bg1"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/middle_layout"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:background="@drawable/albumimg_01"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/album_reflectlight"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="272dp"
            android:orientation="vertical"
            android:background="@drawable/bg_main"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="27dp"></LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Special Edition 2018"
                android:textColor="#f2efe0"
                android:textSize="30dp"
                android:fontFamily="@font/notosanskr_thin"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#333333"
                android:fontFamily="@font/notosanskr_regular"
                android:text="  검정치마  "
                android:textColor="#f2efe0"
                android:textSize="19dp"
                android:includeFontPadding="false"
                />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        >
        <ImageButton
            android:id="@+id/home_btn"
            android:layout_marginLeft="23dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/mn_home_on"
            />
        <ImageButton
            android:id="@+id/list_btn"
            android:layout_marginLeft="35dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/mn_list_off"
            />

        <ImageButton
            android:id="@+id/play_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="35dp"
            android:background="@null"
            android:scaleType="fitXY"
            />

        <ImageButton
            android:id="@+id/gallery_btn"
            android:layout_marginLeft="35dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/mn_gallery_off"
            />
        <ImageButton
            android:id="@+id/sns_btn"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="23dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/mn_sns_off"
            />
    </LinearLayout>


</RelativeLayout>

